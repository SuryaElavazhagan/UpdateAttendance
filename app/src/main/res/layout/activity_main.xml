<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.kingslayer.updateattendance.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/select_date"
        android:textAlignment="center"
        android:id="@+id/select_date_tv"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_attendance"
        android:text="@string/update_attendance"
        android:layout_below="@+id/select_date_tv"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fetch_attendance"
        android:text="@string/fetch_attendance"
        android:layout_below="@+id/update_attendance"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculate_attendance"
        android:text="@string/calculate_attendance"
        android:layout_below="@+id/fetch_attendance"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
